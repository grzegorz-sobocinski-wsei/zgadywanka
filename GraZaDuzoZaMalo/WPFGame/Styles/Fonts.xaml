<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  Basic font values for this application  -->
    <FontFamily x:Key="ArcadeClassic">pack://application;,,,/Fonts/#ArcadeClassic</FontFamily>
    <system:Double x:Key="FontSizeRegular">25</system:Double>

    <!--  Base style for everything  -->
    <Style x:Key="BaseStyle" TargetType="{x:Type Control}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
        <Setter Property="FontFamily" Value="{StaticResource ArcadeClassic}" />
    </Style>

</ResourceDictionary>