<Page
    x:Class="WPFGame.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Notifications  -->
        <Grid Grid.Row="0" Margin="30,30,30,30">
            <TextBlock Text="{Binding Notification}" />
            <TextBlock Text="{Binding User.NumberOfQuestions}" />
        </Grid>
        <!--  User button and placeholder  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Placeholder  -->
            <TextBox
                Grid.Column="0"
                Width="450"
                Height="50"
                BorderBrush="Green"
                BorderThickness="5"
                Text="{Binding UserAnswer}" />

            <!--  Button  -->
            <Button
                Grid.Column="1"
                Margin="20"
                Command="{Binding UserAnswerCommand}"
                Content="{Binding ButtonText}" />
        </Grid>

    </Grid>
</Page>
